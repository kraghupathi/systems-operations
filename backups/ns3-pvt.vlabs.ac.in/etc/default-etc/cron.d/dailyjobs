SHELL=/bin/bash
PATH=/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root
HOME=/

# run-parts
16 2 * * * root [ ! -f /etc/cron.hourly/0anacron ] && run-parts /etc/cron.daily
8 1 * * 0 root [ ! -f /etc/cron.hourly/0anacron ] && run-parts /etc/cron.weekly
37 5 7 * * root [ ! -f /etc/cron.hourly/0anacron ] && run-parts /etc/cron.monthly
